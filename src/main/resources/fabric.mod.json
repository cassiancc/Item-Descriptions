{
  "schemaVersion": 1,
  "id": "item_descriptions",
  "version": "${version}",
  "name": "Item Descriptions",
  "description": "This mod adds unique descriptions to every Minecraft item that can be seen when the Control key is pressed.",
  "authors": ["cassiancc"],
  "contact": {
    "repo": "https://github.com/cassiancc/Item-Descriptions",
    "issues": "https://github.com/cassiancc/Item-Descriptions/issues",
    "homepage": "https://github.com/cassiancc/Item-Descriptions"
  },
  "license": "MIT",
  "icon": "assets/item_descriptions/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "cc.cassian.item_descriptions.client.TooltipClient"
    ],
    "modmenu": [
      "cc.cassian.item_descriptions.client.config.ModMenuIntegration"
    ]
  },
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "recommends": {
    "tooltipfix": "*",
    "cloth-config": "*",
    "modmenu": "*"
  }
}
